@model MaintenanceBill

<style>
    .invoice-container {
        max-width: 1000px;
        margin: 0 auto;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        font-family: Arial, sans-serif;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .invoice-header {
        text-align: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #007bff;
    }

        .invoice-header h2 {
            margin: 0;
            font-size: 24px;
            color: #007bff;
        }

    .details-grid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        gap: 15px 20px;
        margin-top: 20px;
    }

        .details-grid .label {
            font-weight: bold;
            color: #333;
        }

    .invoice-footer {
        margin-top: 30px;
        text-align: center;
    }

    .btn-secondary {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 14px;
        cursor: pointer;
        text-decoration: none;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #0056b3;
        }
</style>

<div class="invoice-container">
    <div class="invoice-header">
        <h2>Maintenance Bill</h2>
        <p><strong>Invoice No:</strong> @Model.InvoiceNo</p>
    </div>

    <div class="details-grid">
        <div class="label">Customer No</div><div>@Model.CustomerNo</div>
        <div class="label">Customer Name</div><div>@Model.CustomerName</div>
        <div class="label">Issue Date</div><div>@Model.IssueDate?.ToString("dd-MM-yyyy")</div>
        <div class="label">Due Date</div><div>@Model.DueDate?.ToString("dd-MM-yyyy")</div>
        <div class="label">Tax Amount</div><div>@Model.TaxAmount?.ToString("C")</div>
        <div class="label">Bill (Due Date)</div><div>@Model.BillAmountInDueDate?.ToString("C")</div>
        <div class="label">Bill (After Due)</div><div>@Model.BillAmountAfterDueDate?.ToString("C")</div>
        <div class="label">Month</div><div>@Model.BillingMonth</div>
        <div class="label">Year</div><div>@Model.BillingYear</div>
        <div class="label">History</div><div style="grid-column: span 3;">@Model.History</div>
    </div>

    <div class="invoice-footer">
        <a href="@Url.Action("MaintenanceBillsSearch", "MaintenanceNew")" class="btn-secondary">Back to List</a>
    </div>
</div>
