@model BMSBT.Models.CustomersDetail

@{
    ViewData["Title"] = "Edit Customer";
    Layout = "_LayoutSSQCustomers";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-warning text-white">
            <h4 class="mb-0">
                <i class="fas fa-edit"></i> @ViewData["Title"]
            </h4>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Uid" />

                        <!-- Same form fields as Create view, but with Edit-specific values -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CustomerNo" class="control-label"></label>
                                    <input asp-for="CustomerNo" class="form-control" />
                                    <span asp-validation-for="CustomerNo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CustomerName" class="control-label"></label>
                                    <input asp-for="CustomerName" class="form-control" />
                                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Add all other form fields similar to Create view -->
                        <!-- ... -->

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-warning" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}