@model IEnumerable<BMSBT.Models.CustomersDetail>

@{
    ViewData["Title"] = "Customers Management";
    Layout = "_LayoutCustomers"; // Update with your layout
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-users"></i> @ViewData["Title"]
                <a asp-action="Create" class="btn btn-light btn-sm float-right">
                    <i class="fas fa-plus"></i> Add New Customer
                </a>
            </h4>
        </div>

        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <!-- Search and Filter Section -->
            <div class="row mb-3">
                <div class="col-md-12">
                    <form asp-action="Index" method="get" class="form-inline">
                        <div class="input-group w-100">
                            <input type="text" class="form-control" name="searchString"
                                   value="@ViewData["CurrentFilter"]"
                                   placeholder="Search by Customer No, Name, CNIC, Mobile...">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary" type="submit">
                                    <i class="fas fa-search"></i> Search
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-redo"></i> Reset
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Customers Grid -->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="customersTable">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["BtnoSortParm"]">
                                    BT No
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">
                                    Customer Name
                                </a>
                            </th>                                                                  
                            <th>Project</th>                          
                            <th>Block</th>
                            <th>Plot No</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Btno)</td>
                                <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>                               
                                <td>@Html.DisplayFor(modelItem => item.Project)</td>
                               <td>@Html.DisplayFor(modelItem => item.Block)</td>
                                <td>@Html.DisplayFor(modelItem => item.PloNo)</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Uid"
                                           class="btn btn-info btn-sm" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Uid"
                                           class="btn btn-warning btn-sm" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @* <button type="button" class="btn btn-danger btn-sm delete-btn"
                                                data-id="@item.Uid" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button> *@
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (ViewData["TotalPages"] != null && (int)ViewData["TotalPages"] > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @{
                            int currentPage = (int)ViewData["CurrentPage"];
                            int totalPages = (int)ViewData["TotalPages"];
                            string searchString = ViewData["CurrentFilter"] as string;
                            string sortOrder = ViewData["CurrentSort"] as string;
                        }

                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="1"
                               asp-route-searchString="@searchString"
                               asp-route-sortOrder="@sortOrder">
                                First
                            </a>
                        </li>

                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@i"
                                   asp-route-searchString="@searchString"
                                   asp-route-sortOrder="@sortOrder">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@totalPages"
                               asp-route-searchString="@searchString"
                               asp-route-sortOrder="@sortOrder">
                                Last
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>

        <div class="card-footer">
            <div class="row">
                <div class="col-md-6">
                    <strong>Total Records:</strong>
                    @(Model.Count() + ((int)ViewData["CurrentPage"] - 1) * (int)ViewData["PageSize"])
                    of @((int)ViewData["TotalPages"] * (int)ViewData["PageSize"])
                </div>
                <div class="col-md-6 text-right">
                    <form asp-action="Index" method="get" class="form-inline float-right">
                        <label for="pageSize" class="mr-2">Show:</label>
                        <select name="pageSize" id="pageSize" class="form-control form-control-sm"
                                onchange="this.form.submit()" style="width: auto;">
                            <option value="10" selected="@((int)ViewData["PageSize"] == 10)">10</option>
                            <option value="25" selected="@((int)ViewData["PageSize"] == 25)">25</option>
                            <option value="50" selected="@((int)ViewData["PageSize"] == 50)">50</option>
                            <option value="100" selected="@((int)ViewData["PageSize"] == 100)">100</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Delete confirmation with AJAX
            $('.delete-btn').click(function() {
                var customerId = $(this).data('id');
                var customerName = $(this).closest('tr').find('td:nth-child(2)').text().trim();

                if (confirm('Are you sure you want to delete customer "' + customerName + '"?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteAjax", "SSQCustomers")/' + customerId,
                        type: 'POST',
                        success: function(response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function() {
                            alert('An error occurred while deleting the customer.');
                        }
                    });
                }
            });

            // Initialize DataTable (optional - if you want enhanced features)
            $('#customersTable').DataTable({
                "paging": false,
                "searching": false,
                "info": false,
                "order": [],
                "columnDefs": [
                    { "orderable": false, "targets": 9 } // Disable sorting on Actions column
                ]
            });
        });
    </script>
}