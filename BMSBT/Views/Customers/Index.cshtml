@model IEnumerable<BMSBT.Models.CustomersDetail>

@{
    ViewData["Title"] = "Customers Management";
    Layout = "_LayoutCustomers";
}

<div class="container-fluid">
    <!-- Customers Grid Section -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-users"></i> Customer Records
                <a asp-action="Create" class="btn btn-light btn-sm float-right">
                    <i class="fas fa-plus"></i> Add New Customer
                </a>
            </h4>
        </div>

        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <!-- Search and Filter Section -->
            <div class="row mb-3">
                <div class="col-md-10">
                    <form asp-action="Index" method="get" class="form-inline">
                        <div class="input-group w-100">
                            <input type="text" class="form-control" name="searchString"
                                   value="@ViewData["CurrentFilter"]"
                                   placeholder="Search by Customer No, Name, CNIC, BT No, Mobile...">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary" type="submit">
                                    <i class="fas fa-search"></i> Search
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-redo"></i> Reset
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-2 text-right">
                    <a asp-action="Export" asp-route-searchString="@ViewData["CurrentFilter"]"
                       class="btn btn-success">
                        <i class="fas fa-file-excel"></i> Export
                    </a>
                </div>
            </div>

            <!-- Customers Grid -->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="customersTable">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                <a asp-action="Index"
                                   asp-route-sortOrder="@ViewData["BtnoSortParm"]"
                                   asp-route-searchString="@ViewData["CurrentFilter"]">
                                    BT No <i class="fas fa-sort"></i>
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index"
                                   asp-route-sortOrder="@ViewData["NameSortParm"]"
                                   asp-route-searchString="@ViewData["CurrentFilter"]">
                                    Customer Name <i class="fas fa-sort"></i>
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index"
                                   asp-route-sortOrder="@ViewData["ProjectSortParm"]"
                                   asp-route-searchString="@ViewData["CurrentFilter"]">
                                    Project <i class="fas fa-sort"></i>
                                </a>
                            </th>
                            <th>Block</th>
                            <th>Plot No</th>
                            <th>Mobile</th>
                            <th>City</th>
                            <th>Bill Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Btno)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Project)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Block)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PloNo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MobileNo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.BillStatus))
                                        {
                                            <span class="badge badge-info">@item.BillStatus</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Uid"
                                               class="btn btn-info btn-sm" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Uid"
                                               class="btn btn-warning btn-sm" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                           
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center">
                                    <em>No customers found.</em>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @{
                            int currentPage = ViewBag.CurrentPage;
                            int totalPages = ViewBag.TotalPages;
                            string searchString = ViewData["CurrentFilter"] as string;
                            string sortOrder = ViewData["CurrentSort"] as string;
                        }

                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pageNumber="1"
                               asp-route-searchString="@searchString"
                               asp-route-sortOrder="@sortOrder">
                                First
                            </a>
                        </li>

                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pageNumber="@(currentPage - 1)"
                               asp-route-searchString="@searchString"
                               asp-route-sortOrder="@sortOrder">
                                Previous
                            </a>
                        </li>

                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-pageNumber="@i"
                                   asp-route-searchString="@searchString"
                                   asp-route-sortOrder="@sortOrder">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pageNumber="@(currentPage + 1)"
                               asp-route-searchString="@searchString"
                               asp-route-sortOrder="@sortOrder">
                                Next
                            </a>
                        </li>

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pageNumber="@totalPages"
                               asp-route-searchString="@searchString"
                               asp-route-sortOrder="@sortOrder">
                                Last
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>

        <div class="card-footer">
            <div class="row">
                <div class="col-md-6">
                    <strong>Total Records:</strong> @ViewBag.TotalRecords
                    @if (ViewData["CurrentFilter"] != null)
                    {
                        <span class="text-muted">(filtered)</span>
                    }
                </div>
                <div class="col-md-6 text-right">
                    <form asp-action="Index" method="get" class="form-inline float-right">
                        <input type="hidden" name="searchString" value="@ViewData["CurrentFilter"]" />
                        <input type="hidden" name="sortOrder" value="@ViewData["CurrentSort"]" />
                        <label for="pageSize" class="mr-2">Show:</label>
                        <select name="pageSize" id="pageSize" class="form-control form-control-sm"
                                onchange="this.form.submit()" style="width: auto;">
                            <option value="10" selected="@(ViewBag.PageSize == 10)">10</option>
                            <option value="25" selected="@(ViewBag.PageSize == 25)">25</option>
                            <option value="50" selected="@(ViewBag.PageSize == 50)">50</option>
                            <option value="100" selected="@(ViewBag.PageSize == 100)">100</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Delete confirmation with AJAX
            $('.delete-btn').click(function() {
                var customerId = $(this).data('id');
                var customerName = $(this).data('name');

                if (confirm('Are you sure you want to delete customer "' + customerName + '"?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteAjax", "Customers")/' + customerId,
                        type: 'POST',
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(response) {
                            if (response.success) {
                                alert(response.message);
                                location.reload();
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function() {
                            alert('An error occurred while deleting the customer.');
                        }
                    });
                }
            });

            // Auto-hide success message after 5 seconds
            setTimeout(function() {
                $('.alert-success').fadeOut('slow');
            }, 5000);
        });
    </script>
}