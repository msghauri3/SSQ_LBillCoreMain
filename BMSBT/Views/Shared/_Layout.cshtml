<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Billing System</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/SGStyleSheet.css" />
    
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/solid.js" integrity="sha384-tzzSw1/Vo+0N5UhStP3bvwWPq+uvzCMfrN1fEFe+xBmv1C/AtVX5K0uZtmcHitFZ" crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/fontawesome.js" integrity="sha384-6OIrr52G08NpOFSZdxxz1xdNSndlD4vdcf/q2myIUVO0VsqaGHJsB0RaBE01VTOY" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <style>
        .sidebar {
            position: absolute; /* Allow normal scrolling behavior */
        }

        .navbar2-top {
            background-color: #f8f9fa; /* Light background color */
            padding: 0px 0;
        }
        .navbar2-top .container {
                display: flex;
                justify-content: space-between;
                align-items: center;
        }

        .navbar2-top .left-section {
                font-weight: bold;
        }
        .navbar2-top .right-section {
                text-align: right;
                flex-grow: 1;
        }

            .navbar2-top .left-section a {
                color: #0056b3;
            }

        a {
            text-decoration: none !important;
        }

        .user-info {
            color: #0056b3; /* Dark gray */
            font-size: 16px; /* Reduce font size */
            font-weight: normal;
        }
    </style>

</head>
<body>

    <!-- First Top Bar -->
    <nav class="navbar navbar-expand-lg navbar1-top navbar-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="~/images/logo.png" alt="Logo" class="logo-margin" style="height: 70px; margin-left: 10px;">
            </a>
            <span class="navbar-text text-white">Bahria Town: Billing System</span>
        </div>
    </nav>

    <!-- Second Top Bar -->
    <nav class="navbar navbar-expand-lg navbar2-top">
        <div class="container">
            <!-- Left-aligned text -->
            <div class="left-section">
                <a asp-controller="Home" asp-action="Index"> Back Main Menu</a>
            </div>
            <!-- Right-aligned text -->
            <div class="right-section">
                <span class="user-info"> Logged-in as @ViewBag.UserName at @ViewBag.LoginTime </span>
                <a asp-controller="Login" asp-action="Logout"
                   class="btn btn-link text-black"
                   onclick="return confirm('Are you sure you want to log out?');">
                    Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Third Top Bar -->
    <nav class="navbar navbar-expand-lg navbar3-top">
        <div class="container">
            <span class="navbar-text text-white"></span>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">

            <!-- Left Sidebar -->
            <div class="col-md-3 col-lg-2 p-3 sidebar">
                <h4>Home</h4>


                <ul class="nav flex-column">



                    <li>
                        <a asp-controller="Customers" asp-action="Index">
                            <i class="fas fa-chart-pie" style="color: yellowgreen; font-size: 14px;"></i>
                            Dashboard
                        </a>
                    </li>



                    <li>
                        <a asp-controller="SSQCustomers" asp-action="Dashboard">
                            <i class="fas fa-user-friends" style="color: yellowgreen; font-size: 14px;"></i>
                            Customers                           
                        </a>
                    </li>

                   
                    <li>
                        <a asp-controller="EBillU" asp-action="Index">
                            <i class='fas fa-bolt' style="color: yellowgreen; font-size: 14px;"></i>
                            Elect Bills
                        </a>
                    </li>


                    <li>
                        <a asp-controller="MaintenanceNew" asp-action="Index">
                            <i class='fas fa-money-bill' style="color: yellowgreen; font-size: 14px;"></i>
                            Maint Bills
                        </a>
                    </li>





                    <!-- Twistee with collapsible internal links (BMS Home) -->
                    <li class="nav-item">
                        <a class="nav-link d-flex justify-content-between align-items-center"
                           data-toggle="collapse"
                           href="#twisteeSubMenuBMS"
                           role="button"
                           aria-expanded="false"
                           aria-controls="twisteeSubMenuBMS">
                            <span>
                                <i class="fas fa-eye" style="color: yellowgreen; font-size: 14px;"></i>
                                &nbsp; Modules
                            </span>
                            <i class="fas fa-chevron-down twistee-caret"></i>
                        </a>

                        <div class="collapse" id="twisteeSubMenuBMS">
                            <ul class="nav flex-column ml-3">
                                
                                <!-- Add more Twistee internal links here -->
                                <li>
                                    <a asp-controller="Reading" asp-action="Index">
                                        <i class='fas fa-cog' style="color: yellowgreen; font-size: 14px;"></i>
                                        Reading Sheet
                                    </a>
                                </li>


                                <li>
                                    <a asp-controller="Fine" asp-action="Index">
                                        <i class='fas fa-cog' style="color: yellowgreen; font-size: 14px;"></i>
                                        Fine
                                    </a>
                                </li>

                                <li>
                                    <a asp-controller="Setup" asp-action="Index">
                                        <i class='fas fa-cog' style="color: yellowgreen; font-size: 14px;"></i>
                                        Setups
                                    </a>
                                </li>



                                <li>
                                    <a asp-controller="Reports" asp-action="Index">
                                        <i class='fas fa-chart-line' style="color: yellowgreen; font-size: 14px;"></i>
                                        Reports
                                    </a>
                                </li>

                                <li>
                                    <a asp-controller="Audit" asp-action="Index">
                                        <i class='fas fa-balance-scale' style="color: yellowgreen; font-size: 14px;"></i>
                                        Audit
                                    </a>
                                </li>


                            </ul>
                        </div>
                    </li>








                    <!-- Twistee with collapsible internal links (BMS Home) -->
                    <li class="nav-item">
                        <a class="nav-link d-flex justify-content-between align-items-center"
                           data-toggle="collapse"
                           href="#twisteeSubMenuSSQ"
                           role="button"
                           aria-expanded="false"
                           aria-controls="twisteeSubMenuSSQ">
                            <span>
                                <i class="fas fa-eye" style="color: yellowgreen; font-size: 14px;"></i>
                                &nbsp; SSQ-Test
                            </span>
                            <i class="fas fa-chevron-down twistee-caret"></i>
                        </a>

                        <div class="collapse" id="twisteeSubMenuSSQ">
                            <ul class="nav flex-column ml-3">

                                <!-- Add more Twistee internal links here -->
                                <li>
                                    <a asp-controller="SSQCustomers" asp-action="Index">
                                        <i class='fas fa-cog' style="color: yellowgreen; font-size: 14px;"></i>
                                        Customers
                                    </a>
                                </li>


                                <li>
                                    <a asp-controller="Fine" asp-action="Index">
                                        <i class='fas fa-cog' style="color: yellowgreen; font-size: 14px;"></i>
                                       Electricity Bills
                                    </a>
                                </li>


                                <li>
                                    <a asp-controller="Fine" asp-action="Index">
                                        <i class='fas fa-cog' style="color: yellowgreen; font-size: 14px;"></i>
                                        Maintenance Bills
                                    </a>
                                </li>
                                

                            </ul>
                        </div>
                    </li>




                  



                                      
                </ul>
            </div>

            <!-- Right Content Area -->
            <div class="col-md-9 col-lg-10 content-area p-3">
                @RenderBody()
            </div>

        </div>
    </div>

  </body>
</html>
<!-- jQuery (required for Bootstrap 4 JS) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Bootstrap 4 JS (requires Popper which you already include) -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<!-- caret toggle for Twistee submenu -->
<script>
    $(document).on('show.bs.collapse', '#twisteeSubMenuBMS', function () {
      $(this).prev().find('.twistee-caret').removeClass('fa-chevron-down').addClass('fa-chevron-up');
    });

    $(document).on('hide.bs.collapse', '#twisteeSubMenuBMS', function () {
      $(this).prev().find('.twistee-caret').removeClass('fa-chevron-up').addClass('fa-chevron-down');
    });
</script>
